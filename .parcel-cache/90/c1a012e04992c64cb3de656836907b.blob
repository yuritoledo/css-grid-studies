.container {
    display: grid;
    grid: 150px / auto auto auto;
    gap: 10px;
}

.col-1 {
    grid-column: 1 span;
    background: red;
}
.col-2 {
    grid-column: 2 span;
    background: #AAA;
}
.col-3 {
    grid-column: 3 span;
    background: #BBB;
}
.col-4 {
    grid-column: 4 span;
    background: #CCC;
}
