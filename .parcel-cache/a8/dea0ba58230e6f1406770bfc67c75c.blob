.container {
    display: grid;
    grid-template-columns: repeat(10, 1fr);
    max-width: 960px;
    margin: 0 auto;
    gap: 10px;
}

 [class^="col-"] {
    border-radius: 8px;
}

.col-1 {
    grid-column: span 1;
    background: red;
}
.col-2 {
    grid-column: span 2;
    background: #AAA;
}
.col-3 {
    grid-column: span 3;
    background: yellow;
}
.col-4 {
    grid-column: span 4;
    background: purple;
}

@media screen and (max-width: 670px) {
    [class^="col-"] {
        grid-column: span 5;
    }
}

